    <h2>High Order Components</h2>
  </header>

  <article>
    <h3>Toggle Component</h3>

    <CodeSnippet @name="hoc/toggle-structure.txt"/>

    <Tabs as |tabs|>
      <tabs.page @title="template.hbs">
        <CodeSnippet @name="ui/routes/patterns/component-types/high-order-components/-components/toggle/template.hbs"/>
      </tabs.page>

      <tabs.page @title="component.ts">
        <CodeSnippet @name="ui/routes/patterns/component-types/high-order-components/-components/toggle/component.ts"/>
      </tabs.page>

      <tabs.page @title="label.hbs">
        <CodeSnippet @name="ui/routes/patterns/component-types/high-order-components/-components/toggle/label/template.hbs"/>
      </tabs.page>

      <tabs.page @title="switch.hbs">
        <CodeSnippet @name="ui/routes/patterns/component-types/high-order-components/-components/toggle/switch/template.hbs"/>
      </tabs.page>
    </Tabs>

    <h3>Usage</h3>

    <h4>Basic Usage</h4>

    <Tabs as |tabs|>
      <tabs.page @title="Template">
        <CodeSnippet @name="hoc/toggle-basic.hbs"/>
      </tabs.page>

      <tabs.page @title="Result">
        <Toggle @label='Toggle' @onLabel='On' @offLabel='Off'/>
      </tabs.page>
    </Tabs>


    <h4>Block Usage</h4>

    <Tabs as |tabs|>
      <tabs.page @title="Template">
        <CodeSnippet @name="hoc/toggle-block.hbs"/>
      </tabs.page>

      <tabs.page @title="Result">
        <Toggle @onLabel='On' @offLabel='Off'>Toggle</Toggle>
      </tabs.page>
    </Tabs>


    <h4>Block Params Usage</h4>

    <Tabs as |tabs|>
      <tabs.page @title="Template">
        <CodeSnippet @name="hoc/toggle-block-params.hbs"/>
      </tabs.page>

      <tabs.page @title="Result">
        <Toggle as |t|>
          <t.label @value={{true}} local-class="on">On</t.label>
          <t.switch/>
          <t.label>Toggle</t.label>
          <t.label @value={{false}} local-class="off">Off</t.label>
        </Toggle>
      </tabs.page>
    </Tabs>

    <h4>Super-Duper-Extended Usage</h4>

    <Tabs as |tabs|>
      <tabs.page @title="Template">
        <CodeSnippet @name="hoc/toggle-super-duper.hbs"/>
      </tabs.page>

      <tabs.page @title="Result">
        <Toggle @labelComponent={{component 'fancy-label'}} @onLabel='On' @offLabel='Off'>Toggle</Toggle>
      </tabs.page>
    </Tabs>

