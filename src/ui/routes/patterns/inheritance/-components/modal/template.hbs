<div id="{{this.id}}">
  Modal opened: {{this.opened}}

  {{#if (has-block-params)}}
    {{yield (hash
      header=(component 'header' modal=this)
      body=(component 'body' modal=this)
    )}}
  {{else if (has-block)}}
    <Body>{{yield}}</Body>
  {{else}}
    <Header></Header>

    <Body></Body>
  {{/if}}
</div>